@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ServiceDetail>
@{
	Layout = "mainLayout.cshtml";
}

<partial name="Partials/Layout/_PageHeader" model="(IPageHeader)Model" />

<section class="py-16">
	<div class="max-w-7xl mx-auto px-4">
		<div class="flex flex-row justify-between">
			<aside class="w-3/12 flex flex-col gap-4">
				@Html.GetBlockListHtml(Model.ServiceDetailAsides)
			</aside>


			<div class="block w-px bg-border-gray"></div>


			<div class="w-8/12 flex flex-col gap-2">
				<div class="rte">@Html.Raw(Model.ServiceDetailBody)</div>
			</div>
		</div>

		<div class="pt-[4rem]">
			<h2 class="font-bold text-[1.55rem] text-primary pb-4">Have a question?</h2>

			<div>
                <form class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <input type="text" placeholder="Name" class="w-full px-4 py-3 italic border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary" />
                        </div>
                        <div>
                            <input type="email" placeholder="Email" class="w-full px-4 py-3 italic border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary" />
                        </div>
                    </div>

                    <div>
                        <textarea placeholder="Question" rows="6" class="w-full px-4 py-3 italic border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary resize-none"></textarea>
                    </div>

                    <div>
                        <button type="submit" class="bg-primary  text-white font-bold px-8 py-3 rounded hover:bg-secondary transition-colors cursor-pointer">
                            <p>Submit</p>
                        </button>
                    </div>
                </form>
			</div>
		</div>

	</div>
</section>

@Html.GetBlockListHtml(Model.ContactInfoSection)