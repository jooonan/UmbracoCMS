@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
	var rootContent = Umbraco.ContentAtRoot();
	var siteSettings = rootContent.OfType<SiteSettings>().FirstOrDefault();

	var contactAddress = siteSettings?.ContactAddress ?? "Ingen adrdress angiven";
}

<div class="bg-primary">
	<div class="max-w-7xl mx-auto px-4 flex items-center justify-between">
		<p class="text-xs text-neutral">@contactAddress</p>

		<div class="flex">
			@if (siteSettings?.PlatformList != null)
			{
				foreach (var item in siteSettings.PlatformList)
				{
					if (item.Content is SocialMediaItem mediaItem)
					{
						switch (mediaItem.PlatformName!.ToLower())
						{
							case "facebook":
								
								<a href="@mediaItem.PlatformAccountUrl" target="_blank" class="flex items-center justify-center p-3 text-base text-neutral border-l border-main-light last:border-r">
									<i class="fa-brands fa-facebook"></i>
								</a>
								break;
								
							case "linkedin":

								<a href="@mediaItem.PlatformAccountUrl" target="_blank" class="flex items-center justify-center p-3 text-base text-neutral border-l border-main-light last:border-r">
									<i class="fa-brands fa-linkedin"></i>
								</a>
								break;
						}
					}
				}
			}
		</div>


	</div>
</div>